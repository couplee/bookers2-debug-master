<div class='container'>
  <div class='errors_sentence'>
    <% if @post_comment.errors.any? %>
      <div id="error_explanation">
        <h2><%= @post_comment.errors.count %> error prohibited this book from being saved:</h2>
        <ul>
          <% @post_comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
        
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @new_book %>
    </div>
    
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@book.user) do %>
            <%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
          <% if @book.favorite_by?(current_user) %>
            <td>
              <%= link_to book_favorites_path(@book), method: :delete, class: "text-danger" do %>
              ♥<%= @book.favorites.count %>
              <% end %>
            </td>
          <% else %>
            <td>
              <%= link_to book_favorites_path(@book), method: :post do %>
              ♡<%= @book.favorites.count %>
              <% end %>
            </td>
          <% end %>
          <td>コメント件数：<%= @book.post_comments.count %></td>
          <% if @user.id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>
        </tr>
      </table>
      
      
      
      <% @book.post_comments.each do |post_comment| %>
        <div class="comments">
          <table>
            <tr>
              <td>
                <%= link_to user_path(@book.user) do %>
          　       <%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td><%= post_comment.comment %></td>
              <% if post_comment.user == current_user %>
                <td><%= link_to "Destroy", book_post_comment_path(post_comment.book, post_comment), method: :delete, class: 'btn btn-sm btn-danger' %></td>
              <% end %>
            </tr>
          </table>
        </div>
      <% end %>
      
      <div class="new-comment">
      <%= form_with(model:[@book, @post_comment], local: true) do |f| %>
        <%= f.text_area :comment, :size=>"90x5" %><br>
        <%= f.submit "送信" %>
      <% end %>
      </div>
    </div>
  </div>
</div>